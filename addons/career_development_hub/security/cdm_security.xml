<odoo>
    <record id="group_cdm_employee" model="res.groups">
        <field name="name">Career Development Employee</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="group_cdm_manager" model="res.groups">
        <field name="name">Career Development Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_cdm_employee'))]"/>
    </record>

    <record id="group_cdm_hr_admin" model="res.groups">
        <field name="name">Career Development HR Admin</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_cdm_manager'))]"/>
    </record>

    <record id="rule_cdm_employee_own_skills" model="ir.rule">
        <field name="name">Employee own skills</field>
        <field name="model_id" ref="model_cdm_employee_skill"/>
        <field name="groups" eval="[(4, ref('career_development_hub.group_cdm_employee'))]"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
    </record>

    <record id="rule_cdm_manager_team_skills" model="ir.rule">
        <field name="name">Manager team skills</field>
        <field name="model_id" ref="model_cdm_employee_skill"/>
        <field name="groups" eval="[(4, ref('career_development_hub.group_cdm_manager'))]"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.parent_id.user_id','=',user.id)]</field>
    </record>

    <record id="rule_cdm_employee_own_course_requests" model="ir.rule">
        <field name="name">Employee own course requests</field>
        <field name="model_id" ref="model_cdm_course_request"/>
        <field name="groups" eval="[(4, ref('career_development_hub.group_cdm_employee'))]"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
    </record>

    <record id="rule_cdm_manager_team_course_requests" model="ir.rule">
        <field name="name">Manager team course requests</field>
        <field name="model_id" ref="model_cdm_course_request"/>
        <field name="groups" eval="[(4, ref('career_development_hub.group_cdm_manager'))]"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.parent_id.user_id','=',user.id)]</field>
    </record>
</odoo>
