<odoo>
    <record id="view_cdm_skill_category_tree" model="ir.ui.view">
        <field name="name">cdm.skill.category.tree</field>
        <field name="model">cdm.skill.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="skill_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_cdm_skill_tree" model="ir.ui.view">
        <field name="name">cdm.skill.tree</field>
        <field name="model">cdm.skill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="external_skill_key"/>
                <field name="skill_type"/>
                <field name="category_id"/>
                <field name="assessment_available"/>
                <field name="course_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_cdm_role_profile_form" model="ir.ui.view">
        <field name="name">cdm.role.profile.form</field>
        <field name="model">cdm.role.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="external_role_id"/>
                        <field name="role_title"/>
                        <field name="career_level"/>
                        <field name="job_id"/>
                        <field name="department_id"/>
                        <field name="version"/>
                        <field name="active"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="skill_id"/>
                            <field name="target_level_id"/>
                            <field name="is_required"/>
                            <field name="weight"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cdm_skill_categories" model="ir.actions.act_window">
        <field name="name">Skill Categories</field>
        <field name="res_model">cdm.skill.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_cdm_skills" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="res_model">cdm.skill</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_cdm_role_profiles" model="ir.actions.act_window">
        <field name="name">Role Profiles</field>
        <field name="res_model">cdm.role.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
